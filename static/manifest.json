{
  "manifest_version": 3,
  "name": "FoxWallet",
  "description": "",
  "version": "0.0.1",
  "icons": {
    "32": "/icons/32x.png",
    "128": "/icons/128x.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "unlimitedStorage",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_security_policy": {
    "extension_pages":
      "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "https://*/*"],
      "resources": []
    }
  ]
}